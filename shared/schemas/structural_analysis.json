{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "StructuralAnalysis",
  "description": "Output from the Structural Analysis agent team. Identifies objects and assesses structural integrity factoring in fire data.",
  "type": "object",
  "required": ["objects", "integrity_score", "blocked_passages", "frame_id", "timestamp"],
  "properties": {
    "objects": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type", "condition"],
        "properties": {
          "type": { "type": "string", "enum": ["door", "wall", "window", "furniture", "stairwell", "elevator", "column", "ceiling", "floor", "exit_sign", "fire_extinguisher", "sprinkler"] },
          "condition": { "type": "string", "enum": ["intact", "damaged", "compromised", "destroyed"] },
          "location_label": { "type": "string", "description": "Where in the frame/room this object is" },
          "x": { "type": "number", "minimum": 0, "maximum": 1 },
          "y": { "type": "number", "minimum": 0, "maximum": 1 },
          "notes": { "type": "string", "description": "Additional context e.g. 'door blocked by debris'" }
        }
      }
    },
    "integrity_score": {
      "type": "integer",
      "minimum": 1,
      "maximum": 10,
      "description": "Structural integrity. 10 = fully sound, 7-9 = minor damage, 4-6 = significant compromise, 1-3 = imminent collapse risk"
    },
    "blocked_passages": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["passage", "reason"],
        "properties": {
          "passage": { "type": "string", "description": "e.g. 'hallway B east door', 'stairwell A'" },
          "reason": { "type": "string", "enum": ["fire", "debris", "structural_failure", "smoke"] },
          "severity": { "type": "string", "enum": ["partial", "complete"] }
        }
      }
    },
    "degradation_timeline": {
      "type": "object",
      "description": "Predicted structural degradation over time",
      "properties": {
        "minutes_to_concern": { "type": "integer", "description": "Minutes until structural integrity drops to concerning levels" },
        "minutes_to_critical": { "type": "integer", "description": "Minutes until potential collapse risk" },
        "factors": { "type": "array", "items": { "type": "string" }, "description": "Factors accelerating degradation" }
      }
    },
    "collapse_risk": {
      "type": "string",
      "enum": ["none", "low", "moderate", "high", "imminent"]
    },
    "frame_id": { "type": "string" },
    "timestamp": { "type": "string", "format": "date-time" }
  }
}
