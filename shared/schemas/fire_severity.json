{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "FireSeverityAnalysis",
  "description": "Output from the Fire Severity agent team. Classifies fire intensity, location, and fuel sources from a single frame.",
  "type": "object",
  "required": ["severity", "fire_locations", "fuel_sources", "confidence", "frame_id", "timestamp"],
  "properties": {
    "severity": {
      "type": "integer",
      "minimum": 0,
      "maximum": 10,
      "description": "Overall fire severity score. 0 = no fire, 1-3 = minor, 4-6 = moderate, 7-9 = severe, 10 = extreme/flashover"
    },
    "fire_locations": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["label", "intensity", "x", "y"],
        "properties": {
          "label": { "type": "string", "description": "Descriptive label e.g. 'kitchen area', 'hallway north'" },
          "intensity": { "type": "number", "minimum": 0, "maximum": 1, "description": "Normalized intensity at this location" },
          "x": { "type": "number", "minimum": 0, "maximum": 1, "description": "Normalized x coordinate in frame" },
          "y": { "type": "number", "minimum": 0, "maximum": 1, "description": "Normalized y coordinate in frame" },
          "radius": { "type": "number", "minimum": 0, "maximum": 1, "description": "Normalized radius of fire area" }
        }
      }
    },
    "fuel_sources": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["material", "flammability"],
        "properties": {
          "material": { "type": "string", "description": "e.g. 'furniture', 'paper', 'wood', 'carpet', 'electronics'" },
          "flammability": { "type": "string", "enum": ["low", "medium", "high"] },
          "location_label": { "type": "string" }
        }
      }
    },
    "smoke_density": {
      "type": "string",
      "enum": ["none", "light", "moderate", "heavy", "zero_visibility"],
      "description": "Smoke level observed in the frame"
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "Model confidence in the overall severity assessment"
    },
    "frame_id": { "type": "string", "description": "Reference to the analyzed frame" },
    "timestamp": { "type": "string", "format": "date-time" }
  }
}
