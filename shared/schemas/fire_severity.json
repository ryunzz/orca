{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "FireSeverityResult",
  "description": "Output schema for Fire Severity Team analysis",
  "type": "object",
  "required": ["fire_detected", "overall_severity", "fire_locations", "timestamp"],
  "properties": {
    "fire_detected": {
      "type": "boolean",
      "description": "Whether fire is detected in the analyzed frame(s)"
    },
    "overall_severity": {
      "type": "string",
      "enum": ["none", "low", "moderate", "high", "critical"],
      "description": "Overall fire severity assessment"
    },
    "severity_score": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "Normalized severity score (0-1)"
    },
    "fire_locations": {
      "type": "array",
      "description": "List of detected fire locations",
      "items": {
        "type": "object",
        "required": ["zone_id", "intensity", "coordinates"],
        "properties": {
          "zone_id": {
            "type": "string",
            "description": "Identifier for the zone/room where fire is detected"
          },
          "intensity": {
            "type": "string",
            "enum": ["smoldering", "small", "moderate", "large", "flashover"],
            "description": "Fire intensity level at this location"
          },
          "intensity_score": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          },
          "coordinates": {
            "type": "object",
            "required": ["x", "y"],
            "properties": {
              "x": { "type": "number" },
              "y": { "type": "number" },
              "z": { "type": "number" }
            }
          },
          "spread_direction": {
            "type": "string",
            "enum": ["north", "south", "east", "west", "up", "down", "multi"],
            "description": "Primary direction of fire spread"
          },
          "estimated_temperature": {
            "type": "number",
            "description": "Estimated temperature in Celsius"
          }
        }
      }
    },
    "fuel_sources": {
      "type": "array",
      "description": "Identified fuel sources contributing to fire",
      "items": {
        "type": "object",
        "required": ["type", "zone_id"],
        "properties": {
          "type": {
            "type": "string",
            "enum": ["furniture", "electronics", "chemicals", "structural", "vegetation", "gas", "unknown"],
            "description": "Type of fuel source"
          },
          "zone_id": { "type": "string" },
          "hazard_level": {
            "type": "string",
            "enum": ["low", "moderate", "high"]
          }
        }
      }
    },
    "smoke_conditions": {
      "type": "object",
      "properties": {
        "visibility": {
          "type": "string",
          "enum": ["clear", "light", "moderate", "heavy", "zero"],
          "description": "Visibility conditions due to smoke"
        },
        "toxicity_risk": {
          "type": "string",
          "enum": ["low", "moderate", "high"],
          "description": "Estimated smoke toxicity risk"
        },
        "affected_zones": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "spread_prediction": {
      "type": "object",
      "description": "Predicted fire spread over time",
      "properties": {
        "rate": {
          "type": "string",
          "enum": ["slow", "moderate", "rapid"],
          "description": "Estimated spread rate"
        },
        "at_risk_zones": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Zones likely to be affected within 5-10 minutes"
        },
        "containment_difficulty": {
          "type": "string",
          "enum": ["easy", "moderate", "difficult", "extreme"]
        }
      }
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of analysis"
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "Confidence score for this analysis"
    },
    "frame_refs": {
      "type": "array",
      "items": { "type": "string" },
      "description": "References to analyzed frames"
    }
  }
}
